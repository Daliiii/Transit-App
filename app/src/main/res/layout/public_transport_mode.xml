<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/padding_medium"
              android:background="@color/colorPrimaryDark"
              android:orientation="vertical"
              android:id="@+id/parentLayout">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/padding_medium"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/startStation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                style="@style/text_medium"/>
        <TextView
                android:id="@+id/StartTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/stopsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:animateLayoutChanges="true"
            android:orientation="vertical">
        <View android:id="@+id/divider"
              android:layout_width="match_parent"
              android:layout_height="@dimen/divider_height"
              android:background="@color/white"
              android:layout_margin="@dimen/padding_medium"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/transportIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/direction"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_medium"
                    android:layout_marginStart="@dimen/padding_medium"
                    android:layout_marginTop="@dimen/padding_medium"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/padding_medium"/>
        </LinearLayout>
        <LinearLayout
                android:id="@+id/stopsNumberLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <ImageView
                    android:id="@+id/arrowIcon"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/icon_arrow_right"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/padding_small"/>
            <TextView
                    android:id="@+id/stopsNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/padding_big"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    style="@style/text_small"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@color/colorPrimary"
                android:layout_margin="@dimen/padding_medium"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/arrivalLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginTop="@dimen/padding_medium"
            android:orientation="horizontal">
        <TextView
                android:id="@+id/destinationStation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                style="@style/text_medium"/>
        <TextView
                android:id="@+id/destinationTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/text_medium"
                android:gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>